
@{
    ViewBag.Title = "PostDetail";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

@model EnterpriseArchitecture.DTO.EEntity.EPostDetailPageDTO

@section styles{
    <link href="~/Assets/Internal/Custom/Styles/Site.css" rel="stylesheet" />

    <style>
        .circular-image-container {
            border-radius: 50%;
            overflow: hidden;
            display: inline-block;
            vertical-align: middle;
        }

        .display-field {
            color: white;
        }
    </style>
}

<main class="container mt-5">
    <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
        <div class="row">
            <div class="col-md-10 px-0">
                <h1 class="display-4">@Model.PostDetail.Title</h1>
                <h5><span>@Model.PostDetail.Job</span> <br /> <span>@Model.PostDetail.CreatedOnString</span> </h5>
            </div>

            <div class="col-md-1 px-0" style="margin-top: 30px;">
                <div class="circular-image-container">
                    <img src="@Model.PostDetail.UserImageUrl/70/70" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>

    <div class="p-4 p-md-5 mb-4 rounded bg-dark">
        <div class="row text-white">
            <div class="col-md-12 px-0">
                <div id="decode-container">
                    @MvcHtmlString.Create(HttpUtility.HtmlDecode(Model.PostDetail.PostContent))
                </div>
            </div>
        </div>
    </div>

    <div class="row g-5">
        <div class="col-md-6">
            <div class="d-grid gap-2">
                <a class="btn btn-primary" href="#">New</a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="d-grid gap-2">
                <a class="btn btn-primary" href="#">Old</a>
            </div>
        </div>
    </div>
</main>

@section pageScripts{
    <script>
        $(document).ready(function () {
            $('#decode-container p').css('color', '#DCDCDC');
            $('#decode-container li').css('color', '#DCDCDC');
            $('#decode-container span').css('color', '#DCDCDC');
        });
    </script>
} 