<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    
    <link href="~/Assets/External/Plugins/Toastr/Styles/toastr.css" rel="stylesheet" />
    
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/mybundle")
    @RenderSection("scripts", required: false)

    <title>@ViewBag.Title</title>
</head>

<body style="background-color: black !important;">
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg" style="background-color: black !important; margin-top: 20px;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Technology Articles</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/Login">Login</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-primary" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    @RenderSection("breadCrumb", required: false)
    
    @RenderBody()

 
    <div style="margin-top: 20px;">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top" style="padding: 0px !important; margin: 0px !important;">
            <p class="col-md-4 mb-0 text-muted">&copy; 2021 Technology Articles Inc.</p>

            <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                <!-- Icon -->
            </a>

            <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Home</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Features</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Pricing</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">FAQs</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">About</a></li>
            </ul>
        </footer>
    </div>

    @RenderSection("pageScripts", required: false)
</body>
</html>